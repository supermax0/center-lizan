ğŸ“ Firebase Cloud Function (Node.js)
const functions = require("firebase-functions");
const admin = require("firebase-admin");
admin.initializeApp();

exports.sendTomorrowReminders = functions.pubsub
  .schedule("0 9 * * *")
  .timeZone("Asia/Baghdad")
  .onRun(async () => {

    const db = admin.firestore();

    const tomorrow = new Date();
    tomorrow.setDate(tomorrow.getDate() + 1);
    tomorrow.setHours(0, 0, 0, 0);

    const afterTomorrow = new Date(tomorrow);
    afterTomorrow.setDate(afterTomorrow.getDate() + 1);

    const snapshot = await db.collection("appointments")
      .where("sessionDate", ">=", tomorrow)
      .where("sessionDate", "<", afterTomorrow)
      .where("reminderSent", "==", false)
      .get();

    snapshot.forEach(async (doc) => {
      const data = doc.data();

      // ğŸ”” Email placeholder
      console.log(`Reminder sent to ${data.clientName}`);

      await doc.ref.update({
        reminderSent: true
      });
    });

    return null;
  });

