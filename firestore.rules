rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() { return request.auth != null; }
    function isAdmin() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; }
    function getUserRole() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role; }
    
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isAuth() && (request.auth.uid == userId || isAdmin());
    }
    match /clients/{docId} {
      allow read, write: if isAuth();
    }
    match /appointments/{docId} {
      allow read, write: if isAuth();
    }
    match /services/{docId} {
      allow read: if isAuth();
      allow write: if isAuth() && (getUserRole() in ['admin']);
    }
    match /inventory/{docId} {
      allow read: if isAuth();
      allow write: if isAuth() && (getUserRole() in ['admin', 'inventory']);
    }
    match /inventory_logs/{docId} {
      allow read, write: if isAuth() && (getUserRole() in ['admin', 'inventory']);
    }
    match /reminders/{docId} {
      allow read, write: if isAuth();
    }
    match /messages/{docId} {
      allow read: if isAuth() && (resource.data.toUid == request.auth.uid || resource.data.toUid == 'all');
      allow create: if isAuth();
      allow update: if isAuth() && (resource.data.toUid == request.auth.uid || resource.data.toUid == 'all');
      allow delete: if isAuth();
    }
    match /client_reminders/{docId} {
      allow read, write: if isAuth();
    }
  }
}
